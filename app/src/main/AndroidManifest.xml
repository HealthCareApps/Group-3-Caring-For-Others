<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.fau.ngamarra2014.sync_care">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registerActivity"
            android:label="Registration" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Home Page" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".LinkedRequestsActivity"
            android:label="Linked Requests" >
        </activity>
        <activity
            android:name=".VuMarkActivity"
            android:label="VuMark" >
        </activity>
        <activity
            android:name=".AlertsActivity"
            android:label="Alerts" >
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="Account" >
        </activity>
        <activity
            android:name=".RxActivity"
            android:label="Prescriptions" />
        <activity
            android:name=".AddPatient"
            android:label="Add Patient" />

        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".PatientListActivity"
            android:label="List of Patients"
            android:theme="@style/AppTheme.NoActionBar" />
   
        <activity
            android:name=".Healthcare"
            android:label="@string/title_activity_healthcare"
            android:theme="@style/AppTheme.NoActionBar">
            
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
