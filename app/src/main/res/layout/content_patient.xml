<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.fau.ngamarra2014.sync_care.PatientActivity"
    tools:showIn="@layout/activity_patient"
    android:background="#ffffff">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        tools:context=".GridXMLActivity"
        android:columnOrderPreserved="false">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_columnSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Primary Diagnosis"
                android:id="@+id/pdiganosis"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="27dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date of Birth: "
                android:id="@+id/dob"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/caretakers"
            android:src="@drawable/caretakers"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/doc"
            android:src="@drawable/doctor_button"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/meds"
            android:src="@drawable/medication_button"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/healthcare"
            android:src="@drawable/pharmacy_button"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/routines"
            android:src="@drawable/daily_routines_button"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/profile"
            android:src="@drawable/profile_button"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

    </GridLayout>

</android.support.v4.widget.NestedScrollView>
